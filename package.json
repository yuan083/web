{
  "name": "tax-learning-platform",
  "version": "1.0.0",
  "description": "税务学习平台 - 基于MongoDB的税务考试学习系统",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "init-db": "mongosh < scripts/init-database.js",
    "create-indexes": "mongosh < scripts/create-indexes.js",
    "test-db": "mongosh < scripts/test-queries.js",
    "reset-db": "mongosh --eval 'use tax_learning_platform; db.dropDatabase(); print(\"数据库已重置\")' && npm run init-db && npm run create-indexes",
    "test-api": "curl http://localhost:9365/health",
    "test-knowledge": "curl http://localhost:9365/api/knowledge/环境保护税/概念和征税范围",
    "start-frontend": "python3 -m http.server 9367 --directory frontend",
    "dev:full": "concurrently \"npm run dev\" \"npm run start-frontend\""
  },
  "keywords": [
    "tax",
    "education",
    "learning",
    "mongodb",
    "chinese"
  ],
  "author": " yuan",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}